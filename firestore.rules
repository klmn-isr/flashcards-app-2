rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only manage their own flashcards
    match /flashcards/{flashcardId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only manage their own user flashcards
    match /userFlashcards/{flashcardId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only manage their own study sessions
    match /studySessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only manage their own progress
    match /userProgress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Remote flashcards can be read by all authenticated users
    // Allow updates for adding random fields and other modifications
    match /remoteFlashcards/{flashcardId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        (resource == null || !exists(/databases/$(database)/documents/remoteFlashcards/$(flashcardId)));
      allow update: if request.auth != null; // Allow authenticated users to update flashcards
      allow delete: if false; // Only admins can delete remote flashcards
    }
    
    // Public flashcards (if any) can be read by authenticated users
    match /publicFlashcards/{flashcardId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write public flashcards
    }
  }
}