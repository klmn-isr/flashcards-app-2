{
  "name": "flashcards-app-firebase",
  "version": "1.0.0",
  "description": "Hebrew Flashcards App with Firebase Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "deploy": "npm run deploy:frontend",
    "deploy:frontend": "npm run deploy --workspace=frontend",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=shared"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 